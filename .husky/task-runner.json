{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "dotnet-format",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["dotnet-format", "--include", "${staged}"],
         "include": ["**/*.cs"]
      },
      {
         "name": "Run csharpier",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [ "csharpier", "${staged}" ],
         "include": [ "**/*.cs" ]
      }
   ]
}
